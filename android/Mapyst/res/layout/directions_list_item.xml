<?xml version="1.0" encoding="UTF-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">

	<TextView android:id="@+id/directions_list_name" android:layout_width="wrap_content" 
	android:layout_height="fill_parent" android:padding="5dp" android:textSize="16sp" 
	android:textColor="@+color/black" android:layout_marginLeft="5dp" />

	<TextView android:id="@+id/directions_list_time" android:layout_width="wrap_content" 
	android:layout_height="fill_parent" android:textSize="14sp" 
	android:textColor="@+color/gray" android:layout_marginRight="10dp"
	android:layout_below="@+id/directions_list_name"
	android:layout_alignParentRight="true"/>

</RelativeLayout>